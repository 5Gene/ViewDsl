<resources>
    <!-- Base application theme. -->
    <style name="Theme.ViewDsl" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">@color/cardview_dark_background</item>
        <!-- Customize your theme here. -->
        <!-- 自定义switchPreference样式 -->
        <item name="switchPreferenceCompatStyle">@style/myPreferenceCompatStyle</item>
        <item name="switchPreferenceStyle">@style/myPreferenceStyle</item>
        <item name="preferenceCategoryStyle">@style/myPreferenceCategoryStyleStyle</item>
    </style>

    <style name="myPreferenceCategoryStyleStyle" parent="Preference.Category.Material">
        <item name="android:layout">@layout/preference_category_material_dsl</item>
    </style>

    <style name="myPreferenceCompatStyle" parent="Preference.SwitchPreferenceCompat.Material">
        <item name="android:layout">@layout/preference_material_dsl</item>
    </style>

    <style name="myPreferenceStyle" parent="Preference.SwitchPreference.Material">
        <item name="android:layout">@layout/preference_material_dsl</item>
    </style>
</resources>